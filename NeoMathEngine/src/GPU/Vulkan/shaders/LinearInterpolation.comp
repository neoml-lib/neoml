layout(std430, binding=1) readonly buffer Data { float data[]; };
layout(std430, binding=2) writeonly buffer Result { float result[]; };

void main()
{
	int taskIndex = ID_X;

	if( taskIndex >= P.objectCount * P.scaledAxis * P.scale * P.objectSize ) {
		return;
	}

	const int resultOffset = taskIndex;
	const int elem = taskIndex % P.objectSize;
	taskIndex /= P.objectSize;
	const int inScale = taskIndex % P.scale;
	taskIndex /= P.scale;
	const int x = taskIndex % P.scaledAxis;
	const int b = taskIndex / P.scaledAxis;
	const int dataOffset = elem + P.objectSize * ( x + P.scaledAxis * b );

	if( x == P.scaledAxis - 1 || inScale == 0 ) {
		result[resultOffset] = data[dataOffset];
	} else {
		result[resultOffset] = float( P.scale - inScale ) / P.scale * data[dataOffset]
			+ float( inScale ) / P.scale * data[dataOffset + P.objectSize];
	}
}
