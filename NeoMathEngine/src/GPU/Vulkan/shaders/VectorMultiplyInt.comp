layout(std430, binding=1) readonly buffer First { int first[]; };
layout(std430, binding=2) readonly buffer Second { int second[]; };
layout(std430, binding=3) writeonly buffer Result { int result[]; };

void main()
{
	VECTOR_LOOP(i, result) {
		int secondIndex = (P.isSecondValue != 0) ? 0 : i;
		int tmp = first[i] * second[secondIndex];
		if(P.isNeg != 0) {
			tmp = -tmp;
		}
		if(P.toAdd != 0) {
			result[i] += tmp;
		} else {
			result[i] = tmp;
		}
	}
}
